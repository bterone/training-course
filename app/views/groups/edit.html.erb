<h5>Edit Group Name</h5>
<%= form_for :group, url: group_path(@group), method: :patch do |f| %>
<div class="row">
    <div class="col-md-6">
        <%= f.text_field(:groupname, {:class => 'form-control'}) %>
    </div>
    <div class="col-md-3">
        <%= f.submit({:class => 'btn btn-primary', :value => 'Edit Group Name'}) %>
    </div>
</div>
<% end %>