<hr class="featurette-divider">
<%= link_to "Create Group", spawn_group_path(@course), { :class => 'btn btn-primary' } %>
<hr class="featurette-divider">
<% @course.groups.each do |group| %>
<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= group.groupname %></h5>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-9">
        <% if group.submission == "NONE" %>
        <button type="button" class="btn btn-secondary">No Submission</button>
        <% else %>
        <%= link_to "Received Submission", submitted_path(group), :class => 'btn btn-success' %>
        <% end %>
        <%= link_to "Give Project", project_path(group), :class => 'btn btn-info' %>
      </div>
      <div class="col-md-3">
        <div class="row">
          <div class="col-md-6">
            <h4><%= group.grade %>/100</h4>
          </div>
          <div class="col-md-6">
            <%= link_to "Submit Grade", grade_path(group), :class => 'btn btn-primary' %>
          </div>
        </div><!-- End of row -->
      </div>
    </div><!-- End of row -->
  </div>
</div>

<hr class="featurette-divider">
<% end %>

<h5>List of all students in groups</h5>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>Group Name</th>
            <th>Number of Students</th>
        </tr>
        </thead>
        <tbody>
<% @groupcount.each do |key, value| %>
        <tr>
          <td><%= key %></td>
          <td><%= value %></td>
        </tr>
<% end %>
        </tbody>
    </table>
</div>