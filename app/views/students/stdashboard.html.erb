<h2>Courses</h2>
<p class="lead">Follow some courses in the home page to populate the dashboard! </p>
<div class="album py-5">
    <div class="row">
    <% @courses.each do |course| %>
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em"><%= course.coursename %></text></svg>
        <div class="card-body">
            <p class="card-text"><%= course.coursedesc %></p>
            <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <%= link_to "Course Overview", stoverview_path(course), :class => 'btn btn-sm btn-outline-secondary' %>
                <% if mymethod(course).first == nil %>
                    <a class="btn btn-sm btn-danger" href="#">No group assigned</a>
                <% else %>
                    <%= link_to "Go to Class", stgroup_path(course), :class => 'btn btn-sm btn-info' %>
                <% end %>
            </div>
            </div>
        </div>
        </div>
    </div>
    <% end %>
    </div>
</div> 