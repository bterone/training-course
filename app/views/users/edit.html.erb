<style>
    .container {
        display: flex;
        justify-content: center;
    }
</style>

<div class="col-md-8">
<h4>Editing User Details</h4>

<%= form_for :user, url: user_path(@user), method: :patch do |f| %>
    <div class="row">
        <div class="col-md-6 mb-3">
        <label for="firstName">First name</label>
        <%= f.text_field(:fname, {:class => 'form-control'}) %>
        </div>
        <div class="col-md-6 mb-3">
        <label for="lastName">Last name</label>
        <%= f.text_field(:lname, {:class => 'form-control'}) %>
        </div>
    </div>

    <div class="mb-3">
        <label for="citizenid">Citizen ID</label>
        <div class="input-group">
        <%= f.text_field(:citizenid, {:class => 'form-control'}) %>
        </div>
    </div>
    <div class="mb-3">
        <%= f.label :email %><br />
        <div class="input-group"> 
        <%= f.email_field(:email, {:class => 'form-control', autofocus: true, autocomplete: "email"}) %>
        </div>
    </div>
    <hr class="mb-4">
    <%= f.submit({:class => 'btn btn-primary btn-lg btn-block', :value => 'Edit User'}) %>
<% end %>
</div>