<h3>List of all students</h3>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>Student ID</th>
            <th>First name</th>
            <th>Last Name</th>
            <th>Citizen ID</th>
            <th>Email</th>
            <th>Group Name</th>
        </tr>
        <tr>
        <%= form_for :filter, url: filter_path, method: "post" do |f| %>
            <th><%= text_field_tag(:studentid, params[:studentid], {:class => 'form-control'}) %></th>
            <th><%= text_field_tag(:fname, params[:fname], {:class => 'form-control'}) %></th>
            <th><%= text_field_tag(:lname, params[:lname], {:class => 'form-control'}) %></th>
            <th><%= text_field_tag(:citizenid, params[:citizenid], {:class => 'form-control'}) %></th>
            <th><%= text_field_tag(:email, params[:email], {:class => 'form-control'}) %></th>
            <th><%= text_field_tag(:groupname, params[:groupname], {:class => 'form-control'}) %></th>
            <th><%= submit_tag("Filter", :class => 'btn btn-primary') %>
        <% end %>
        </tr>
        </thead>
        <tbody>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.studentid %></td>
            <td><%= user.fname %></td>
            <td><%= user.lname %></td>
            <td><%= user.citizenid %></td>
            <td><%= user.email %></td>
            <td><%= user.groupname %></td>
            <td><%= link_to "Edit", edit_user_path(user), :class => 'btn btn-secondary' %></td>
        </tr>
    <% end %>
    </table>
</div>